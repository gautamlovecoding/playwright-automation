{
  "name": "mgrant-playwright-automation",
  "version": "1.0.0",
  "description": "Config-driven Playwright test automation framework for MGrant application with continuous flow execution",
  "main": "index.js",
  "scripts": {
    "test": "node scripts/test-orchestrator.js --continuous",
    "test:preview": "node scripts/test-orchestrator.js --preview",
    "test:headed": "node scripts/test-orchestrator.js --continuous --headed",
    "codegen": "npx playwright codegen https://qa.mgrant.in/#/login",
    "record:session": "npx playwright codegen --save-storage=auth/mgrant-session.json https://qa.mgrant.in/#/login",
    "report": "npx playwright show-report",
    "report:custom": "node scripts/generate-custom-report.js && echo 'Custom report generated at test-results/custom-report.html'",
    "install:browsers": "npx playwright install"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "mgrant",
    "config-driven",
    "continuous-flow"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
